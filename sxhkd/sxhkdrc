  rofi -show drun -theme /home/bakr/.config/rofi/launchers/type-6/style-5.rasi

super + Return
	kitty --directory ~

# Update sxhkd
super + Escape
    pkill -USR1 -x sxhkd


# --- Volume ---
F1
    /usr/bin/wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
F2
    /usr/bin/wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-

F3
    /usr/bin/wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+


# --- Brightness ---
F5
   /usr/bin/brightnessctl set 5%- >/dev/null 2>&1


F6
    /usr/bin/brightnessctl set +5% >/dev/null 2>&1

